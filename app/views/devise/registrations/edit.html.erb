<% content_for :head do %>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :name, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :email, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :email, autofocus: true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :password, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :password_confirmation, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :current_password, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.ppassword_field :current_password, autocomplete: "off" %>
    </div>
  </div>

  <div class="row collapse">
    <div class="small-9 small-offset-3 columns">
      <%= f.submit "Update", class: "round button tiny success" %>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>
Unhappy?
<div class="row">
  <div class="small-4 columns">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "round button tiny alert right inline" %>
  </div>
  <div class="small-3 columns left inline">
    <%= link_to "Back", :back, class: "success button radius tiny" %>
  </div>
</div>
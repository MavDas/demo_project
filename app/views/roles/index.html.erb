<% content_for :head do %>
  <h1>Listing Roles</h1>
<% end %>

<table class="small-12 columns">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= link_to '', role , class: "success button tiny fi-eye" %></td>
        <td><%= link_to '', edit_role_path(role), class: "button tiny fi-pencil" %></td>
        <td><%= link_to '', role, method: :delete, data: { confirm: 'Are you sure?' }, class: "alert button tiny fi-minus" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="small-12 columns center">
    <% if can? :create, Role %>
      <%= link_to 'New Role', new_role_path, class: "radius button tiny success" %>
    <% end %>
  </div>
</div>

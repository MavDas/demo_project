<% content_for :head do %>
  <h1>Listing Items</h1>
<% end %>

<table class="small-12 columns">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.user.name %></td>
        <td><%= link_to '', item , class: "success button tiny fi-eye" %></td>
        <td> <% if can? :update, item %>
              <%= link_to '', edit_item_path(item), class: "button tiny fi-pencil" %>
            <% end %></td>
        <td><% if can? :destroy, item %>
            <%= link_to '', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "alert button tiny fi-minus" %>
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="small-12 columns center"> 
<% if can? :create, Item %>
  <%= link_to 'New Item', new_item_path, class: "radius button tiny success" %>
<% end %>
  </div>
</div>